{
  "workflowApiVersion": "1.1",
  "metaData": {
    "icon": "images/icon.png",
    "category": "offer"
  },
  "type": "REST",
  "lang": {
    "en-US": {
      "name": "Offer Preference Selector",
      "description": "A custom activity to select offer preference."
    }
  },
  "arguments": {
    "execute": {
      "inArguments": [
				{
          "emailAddress": "{{InteractionDefaults.Email}}"
        },
				{
					"firstName": "{{InteractionDefaults.FirstName}}"
				},
				{
					"lastName": "{{InteractionDefaults.LastName}}"
				},
				{
					"offerPreference": "{{Interaction.offerPreference}}"
				}
      ],
      "outArguments": [
				{
					"foundOfferPreference": ""
				}
			],
      "url": "https://jb-custom-activity-offerpreferenceselector.iamabhishekt.repl.co/"
    }
  },
  "configurationArguments": {
    "save": {
      "url": "https://jb-custom-activity-offerpreferenceselector.iamabhishekt.repl.co/save"
    },
    "publish": {
      "url": "https://jb-custom-activity-offerpreferenceselector.iamabhishekt.repl.co/publish"
    },
    "validate": {
      "url": "https://jb-custom-activity-offerpreferenceselector.iamabhishekt.repl.co/validate"
    },
    "stop": {
      "url": "https://jb-custom-activity-offerpreferenceselector.iamabhishekt.repl.co/stop"
    }
  },
  "wizardSteps": [
    { "label": "Step 1", "key": "step1" },
    { "label": "Step 2", "key": "step2" },
    { "label": "Step 3", "key": "step3" },
		{ "label": "Step 4", "key": "step4", "active": false }
  ],
  "userInterfaces": {
    "configModal": {
      "height": 400,
      "width": 800,
      "fullscreen": false
    }
  },
  "schema": {
    "arguments": {
      "execute": {
        "inArguments": [
          {
						"emailAddress": {
							"dataType": "EmailAddress",
							"isNullable": false,
							"direction": "in"
						},
						"firstName": {
							"dataType": "Text",
							"isNullable": false,
							"direction": "in"
						},
						"lastName": {
							"dataType": "Text",
							"isNullable": false,
							"direction": "in"
						},
            "offerPreference": {
              "dataType": "Text",
              "isNullable": true,
              "direction": "in"
            }
          }
        ],
        "outArguments": [
					{
						"foundOfferPreference": {
							"dataType": "Text",
							"direction": "out",
							"access": "visible"
						}
					}
				]
      }
    }
  }
}
